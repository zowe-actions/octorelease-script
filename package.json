    "octorelease"
  ],
  "author": "t1m0thyj",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@actions/artifact": "^1.1.0",
    "@actions/core": "^1.8.2",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.3",
    "@octorelease/core": "^0.1.4",
    "@octorelease/git": "^0.0.1",
    "java-properties": "^1.0.2",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "esbuild": "^0.14.23",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-license-header": "^0.4.0",
    "jest": "^27.0.0",
    "jest-circus": "^27.0.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.3.0"
